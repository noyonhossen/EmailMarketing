<!-- Content area -->
<div class="content d-flex justify-content-center align-items-center">

    <!-- Registration form -->
    <form class="login-form" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div class="card mb-0">
            <div class="card-body">
                <div class="text-center mb-3">
                    <i class="icon-plus3 icon-2x text-success border-success border-3 rounded-round p-3 mb-3 mt-1"></i>
                    <h5 class="mb-0">Create account</h5>
                    <span class="d-block text-muted">All fields are required</span>
                </div>

                <div class="form-group text-center text-muted content-divider">
                    <span class="px-2">Your credentials</span>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group form-group-feedback form-group-feedback-left">
                    <input asp-for="Email" type="text" class="form-control" placeholder="Username">
                    <div class="form-control-feedback">
                        <i class="icon-user-check text-muted"></i>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group form-group-feedback form-group-feedback-left">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                    <div class="form-control-feedback">
                        <i class="icon-user-lock text-muted"></i>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                @*<div class="form-group text-center text-muted content-divider">
                        <span class="px-2">Your contacts</span>
                    </div>*@

                <div class="form-group form-group-feedback form-group-feedback-left">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password">
                    <div class="form-control-feedback">
                        <i class="icon-user-lock text-muted"></i>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                @*<div class="form-group form-group-feedback form-group-feedback-left">
